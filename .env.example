# Execution Mode
DRY_RUN=true  # Set to false for live trading (TEST THOROUGHLY FIRST!)

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY=your_solana_private_key_base58_here
SOLANA_WALLET_ADDRESS=your_solana_wallet_address_here

# Ethereum Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_hex_here
ETHEREUM_WALLET_ADDRESS=your_ethereum_wallet_address_here

# Token Addresses (Gravity Token - REPLACE WITH ACTUAL ADDRESSES)
G_TOKEN_SOLANA=G_TOKEN_MINT_ADDRESS_ON_SOLANA
G_TOKEN_ETHEREUM=0xG_TOKEN_CONTRACT_ADDRESS_ON_ETHEREUM

# Trading Parameters
MIN_PROFIT_PERCENTAGE=1.5
MAX_TRADE_SIZE_USD=1000
MONITORING_INTERVAL_MS=5000

# Slippage Protection
MAX_SLIPPAGE_PERCENTAGE=0.5

# Gas Limits
MAX_GAS_PRICE_GWEI=100
SOLANA_PRIORITY_FEE_LAMPORTS=5000

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
