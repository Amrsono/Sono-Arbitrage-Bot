# ================================================================
# SONO TRADING SUITE - PRODUCTION CONFIGURATION
# ================================================================
# IMPORTANT: Set these values in Railway dashboard
# Do NOT commit real API keys to version control
# ================================================================

# ================================================================
# SERVER CONFIGURATION
# ================================================================
PORT=3001
NODE_ENV=production

# ================================================================
# BLOCKCHAIN RPC ENDPOINTS
# ================================================================
# For production, use premium RPC providers

# Solana RPC (Get from Helius or QuickNode)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY

# Ethereum RPC (Get from Alchemy or Infura)
ETHEREUM_RPC_URL=https://eth.llamarpc.com
# ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# ================================================================
# TRADING CONFIGURATION
# ================================================================
# Set to false for real trading (not recommended without testing!)
DRY_RUN=true

# Minimum profit threshold to execute trades (%)
MIN_PROFIT_PERCENTAGE=1.5

# Maximum trade size in USD
MAX_TRADE_SIZE_USD=100

# Maximum acceptable slippage (%)
MAX_SLIPPAGE_PERCENTAGE=0.5

# ================================================================
# MONITORING CONFIGURATION
# ================================================================
# How often to check prices (milliseconds)
MONITORING_INTERVAL_MS=5000

# How many price records to keep in memory
PRICE_HISTORY_SIZE=100

# ================================================================
# SOCIAL SENTIMENT APIs (Optional - for real data)
# ================================================================
# Twitter API v2 Credentials (Get from developer.twitter.com)
# TWITTER_API_KEY=your_twitter_api_key_here
# TWITTER_API_SECRET=your_twitter_api_secret_here
# TWITTER_BEARER_TOKEN=your_bearer_token_here

# Farcaster API (Get from Neynar or similar)
# FARCASTER_API_KEY=your_farcaster_api_key_here

# ================================================================
# PRIVATE KEYS (Leave empty for dashboard-only mode)
# ================================================================
# WARNING: Only set these if you want to enable real trading!
# Never commit these to version control!

# Solana wallet private key (base58 format)
# SOLANA_PRIVATE_KEY=your_solana_private_key_here

# Ethereum wallet private key (hex format with 0x)
# ETHEREUM_PRIVATE_KEY=0xyour_ethereum_private_key_here

# ================================================================
# TOKEN ADDRESSES (for real trading)
# ================================================================
# Solana token mint address
# SOLANA_TOKEN_MINT=your_token_mint_address_here

# Ethereum token  contract address
# ETHEREUM_TOKEN_ADDRESS=your_token_contract_address_here

# ================================================================
# SECURITY & LOGGING
# ================================================================
# Allowed origins for CORS
CORS_ORIGINS=*

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ================================================================
# DEPLOYMENT INFO
# ================================================================
# Railway will automatically set RAILWAY_ENVIRONMENT
# You can use this to detect if running in production
