{
  "name": "sono-arbitrage-bot",
  "version": "1.0.0",
  "description": "Sono Arbitrage Bot - Multi-agent system for monitoring and executing arbitrage trades across Solana and Ethereum DEXs",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "node src/dashboard/server.js",
    "start:bot": "node src/main.js",
    "dev": "node --watch src/main.js",
    "dev:dashboard": "node --watch src/dashboard/server.js",
    "test:dry-run": "DRY_RUN=true node src/main.js",
    "test:agents": "node src/tests/test-agents.js",
    "test:integration": "node src/tests/test-integration.js",
    "dashboard": "node src/dashboard/server.js",
    "build": "echo 'No build step required for Node.js'",
    "deploy": "railway up"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "arbitrage",
    "dex",
    "solana",
    "ethereum",
    "trading",
    "bot",
    "multi-agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/web3.js": "^1.87.6",
    "@uniswap/sdk-core": "^4.2.1",
    "@uniswap/v3-sdk": "^3.11.2",
    "axios": "^1.6.5",
    "bs58": "^5.0.0",
    "chalk": "^5.3.0",
    "cors": "^2.8.6",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.2",
    "express": "^4.22.1",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}